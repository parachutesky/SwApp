<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="3dp" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/people_description" />

    <TextView
        android:id="@+id/tv_sw_allproject_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="10dp"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_17sp34" />

    <TextView
              android:id="@+id/tv_sw_allproject_qisu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:paddingLeft="10dip"
        android:singleLine="true"
        android:text="期数 : "
        android:textSize="@dimen/tv_15sp30" />

    <TextView
              android:id="@+id/tv_sw_allproject_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:paddingLeft="10dip"
        android:singleLine="true"
        android:text="类型 : "
        android:textSize="@dimen/tv_15sp30" />

    <TextView
              android:id="@+id/tv_sw_allproject_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:paddingLeft="10dip"
        android:singleLine="true"
        android:text="时间 : "
        android:textSize="@dimen/tv_15sp30" />

    <TextView
              android:id="@+id/tv_sw_allproject_nub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:paddingLeft="10dip"
        android:singleLine="true"
        android:text="人数 : "
        android:textSize="@dimen/tv_15sp30" />

</LinearLayout>