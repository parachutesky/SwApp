<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
     android:background="@drawable/setting_item_selector"
    android:orientation="vertical"
     >
<LinearLayout android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:layout_marginTop="5dp"
               android:orientation="horizontal"
              >
    <ImageView
        android:id="@+id/message_iv_circleImageView"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:src="@drawable/list_icon_user_default"
    />
   <RelativeLayout 
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                >
        <RelativeLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_alignParentTop="true"
                      android:orientation="horizontal">
            
                  <TextView
				        android:id="@+id/message_tv_Type"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentLeft="true"
				        android:ellipsize="end"
				        android:gravity="top|left"
				        android:maxLines="1"
				        android:text="0000000000000000"
				        android:textColor="#1f1f1f"
				        android:textSize="16sp" />

				    <TextView
					        android:id="@+id/message_tv_time"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginRight="5dp"
					        android:layout_alignParentRight="true"
					        android:gravity="top|right"
					        android:textColor="#9a9a9a"
					        android:singleLine="true"
					        android:text="03-11 17:21:22"
					        android:textSize="12sp" />
				            
            
        </RelativeLayout>
         <TextView
        android:id="@+id/message_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|left"
        android:layout_alignParentBottom="true"
        android:maxLines="1"
        android:ellipsize="middle"
        android:maxEms="10"
        android:text="22222222222222222222222222222222222222"
        android:textColor="#9a9a9a"
        android:textSize="15sp" />
   </RelativeLayout>
 </LinearLayout>
<View android:layout_width="fill_parent"
          android:layout_height="0.5dip"
          android:background="@color/line_meeting"
          android:layout_marginTop="5dp"
          />
</LinearLayout>