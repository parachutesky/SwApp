	@Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container,
			Bundle savedInstanceState) {
		// TODO Auto-generated method stub

		if (view == null) {
			view = inflater.inflate(R.layout.fragment_listview_doprocess, null);
		}
		if (isFirst) {// 控制网络加载
			initView();

			initData();
