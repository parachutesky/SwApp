    android:layout_height="match_parent" 
    android:background="#ffffff"
    >
   <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
             >
  <include layout="@layout/back_title_blue"/>
