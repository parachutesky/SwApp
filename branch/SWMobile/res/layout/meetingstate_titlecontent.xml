<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dip" >

    <LinearLayout
        android:id="@+id/lin_meeting_nameinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.jnwat.swmobilegy.view.CircleImageView
            android:id="@+id/iv_meetingcheck_title_user"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/detail_icon_user_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_meetingcheck_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/tv_17sp34" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_flow_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="会议申请审批"
                    android:textColor="@color/people_description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textColor="@color/people_description" />

                <TextView
                    android:id="@+id/tv_state_overshenpi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待审批"
                    android:textColor="@color/people_description" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>