<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="@drawable/setting_item_selector"
    android:orientation="horizontal" >
 
 <ImageView  android:id="@+id/news_img"
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:layout_margin="14dip"
             android:layout_alignParentLeft="true"
             /> 

  <LinearLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/news_img"
                android:layout_alignTop="@+id/news_img"
                android:layout_alignBottom="@+id/news_img"
                android:orientation="vertical">
                
      <TextView android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/news_title1_color"
                android:textSize="@dimen/news_title1_textSize"
                android:maxEms="12"
	            android:singleLine="true"
	            android:ellipsize="end"
                android:text="sys title"
                />
       <TextView android:id="@+id/tv_nextTitle"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:textColor="@color/news_title2_color"
	                android:textSize="@dimen/news_title2_textSize"
	                android:maxEms="20"
	                android:maxLines="2"
	                android:ellipsize="end"
	                android:text="sys2"
	                />
    
	   <TextView android:id="@+id/news_date"
	                 android:layout_width="fill_parent"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="10dip"
	                 android:textColor="@color/news_title2_color"
	                 android:textSize="@dimen/news_title2_textSize"
	                 android:text="sys3"
	                />
       
  </LinearLayout>
</RelativeLayout>
