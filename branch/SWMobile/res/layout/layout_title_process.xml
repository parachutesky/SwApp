<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45.0dip"
    android:background="@color/title_blue"
    android:fitsSystemWindows="true"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:visibility="visible"
        android:layout_marginTop="5.0dip"
        android:gravity="center"
        android:src="@drawable/nav_button_back_push" />


    <TextView
        android:id="@+id/title_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:text="新闻"
        android:paddingLeft="75.0dip"
        android:paddingRight="75.0dip"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="22sp" />
    
    <TextView android:id="@+id/tv_pageNum"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_marginRight="5dip"
              android:layout_alignBottom="@+id/title_bar_name"
              android:layout_alignParentRight="true"/>
     <ImageView
                android:id="@+id/iv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/nav_button_message" /> 
    
    
    
    
</RelativeLayout>


