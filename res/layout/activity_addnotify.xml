<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/back_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:paddingTop="20dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="7dp"
                    android:text="阅读人员 |"
                    android:textSize="@dimen/tv_15sp30" />

                <TextView
                    android:id="@+id/tv_readmember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:hint="请选择阅读人员"
                    android:maxLines="2"
                    android:paddingLeft="7dp"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/tv_15sp30" >
                </TextView>
            </LinearLayout>
	         <View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:background="@color/black2_maillist" />
            <!-- 标题 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="7dp"
                    android:text="标         题 |"
                    android:textSize="@dimen/tv_15sp30" />

                <EditText
                    android:id="@+id/et_notifytitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:background="@color/white"
                    android:ellipsize="middle"
                    android:hint="请输入标题内容"
                    android:maxLines="1"
                    android:paddingLeft="7dp"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/tv_15sp30" >
                </EditText>
            </LinearLayout>
            <!-- 类型 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公告类型"
                    android:textSize="@dimen/tv_15sp30" />

                <TextView
                    android:id="@+id/tv_notify_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/right"
                    android:ems="10"
                    android:paddingLeft="15dp"
                    android:text="通知 " >
                </TextView>
            </LinearLayout>
            <!-- 有效开始时间 -->
	         <View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:background="@color/black2_maillist" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp"
                android:textSize="@dimen/tv_15sp30" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效开始时间 |"
                    android:textSize="@dimen/tv_15sp30" />

                <TextView
                    android:id="@+id/tv_databegin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/right"
                    android:ems="10"
                    android:hint="请选择开始时间"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/tv_15sp30" >
                </TextView>
            </LinearLayout>
            <!-- 有效结束时间 -->
	         <View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:background="@color/black2_maillist" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效结束时间 |"
                    android:textSize="@dimen/tv_15sp30" />

                <TextView
                    android:id="@+id/tv_dataend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/right"
                    android:ems="10"
                    android:hint="请选择结束时间"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/tv_15sp30" >
                </TextView>
            </LinearLayout>
	         <View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:background="@color/black2_maillist" />
            <!-- 内容信息 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="内容信息"
                    android:textSize="@dimen/tv_15sp30" />
                <!-- android:textCursorDrawable="@color/title_blue" -->

                <EditText

                    android:id="@+id/et_notifycontent"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                  android:background="@drawable/et_shape"
                    android:gravity="left"
                    android:hint="请输入内容"
                    android:maxLines="10"
                    android:paddingLeft="15dp"
                    
                    android:paddingTop="10dp" >
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/btn_notify_send"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/x_btn_blue"
                android:gravity="center"
                android:paddingBottom="8dip"
                android:paddingTop="8dip"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>